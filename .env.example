# Server Configuration
PORT=8080
ENVIRONMENT=development
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=60

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=cnpj_api
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5
REDIS_READ_TIMEOUT=3
REDIS_WRITE_TIMEOUT=3

# CNPJ Service Configuration
SOLVE_CAPTCHA_API_KEY=your_solve_captcha_api_key
CNPJ_BASE_URL=https://solucoes.receita.fazenda.gov.br/servicos/cnpjreva/cnpjreva_solicitacao.asp
CNPJ_TIMEOUT=300
CNPJ_MAX_RETRIES=3
CNPJ_RETRY_DELAY=5
CNPJ_CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10
RATE_LIMIT_CLEANUP=60

# Browser Configuration
BROWSER_MIN=3
BROWSER_MAX=15
BROWSER_MAX_PAGES=3
BROWSER_TIMEOUT=60
PAGE_TIMEOUT=30
BROWSER_IDLE_TIMEOUT=300
BROWSER_HEADLESS=true

# Security Configuration
ADMIN_TOKEN=your_admin_token_here
API_KEY=your_api_key_here

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Development Configuration
GIN_MODE=debug
SWAGGER_ENABLED=true
